<tr id="<%= dom_id category %>">
  <td>
    <%= category.id %>
  </td>
  <td>
    <%= link_to category.title, edit_category_path(category) %>
  </td>
  <td>
    <%= link_to "Remove this", category, class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
  </td>
</tr>
