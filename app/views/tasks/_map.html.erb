<%=content_tag :div, '', data: {id: task.id, title: task.title, descriptiopn: task.description, latitude: task.latitude, longitude: task.longitude}, id: 'map', style: 'height: 400px' %>
<ul id="active_employees" class="d-none">
  <% Employee.actives.each do |employee| %>
    <%=content_tag :li, employee.name, id: "active_employee_#{employee.id}", data: {id: employee.id, name: employee.name, address: employee.address, latitude: employee.latitude, longitude: employee.longitude }%>
  <% end %>
</ul>

<ul id="task_employees" class="d-none">
  <% task.employees.actives.each do |employee| %>
    <%=content_tag :li, employee.name, id: "task_employee_#{employee.id}", data: {id: employee.id, name: employee.name, address: employee.address, latitude: employee.latitude, longitude: employee.longitude }%>
  <% end %>
</ul>
